# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'ShopifyIOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for ShopifyIOS
  pod 'Alamofire', '~> 4.7' # Networking framework	
  pod 'Kingfisher'          # Framework for caching images  

  target 'ShopifyIOSTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'ShopifyIOSUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
